<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:id="@+id/card" 
    android:layout_height="match_parent" 
    android:layout_width="fill_parent"
    android:orientation="vertical" 
    android:padding="10dp" 
    android:layout_marginRight="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
     >
 
    <TextView android:id="@+id/set_number"
        android:layout_height="wrap_content" 
        android:layout_margin="4dp" 
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF" 
        android:textStyle="bold"
        android:textSize="20sp"/>
        
    <TextView android:id="@+id/weight_lbl" 
        android:layout_height="wrap_content"
        android:layout_margin="4dp" 
        android:layout_width="wrap_content"
        android:paddingTop="5dp"
        android:textColor="#FFFFFF" 
        android:textStyle="bold"
        android:text="Weight (kg): "
        android:layout_below="@+id/set_number"/>
    
    <EditText android:id="@+id/weight" 
        android:inputType="numberDecimal"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" 
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF" 
        android:textStyle="bold" 
        android:layout_toRightOf="@+id/weight_lbl"
        android:layout_below="@+id/set_number"/>


   <TextView android:id="@+id/reps_lbl"
       android:layout_height="wrap_content"
       android:layout_margin="4dp"
       android:layout_width="wrap_content"
       android:paddingTop="10dp"
       android:textColor="#FFFFFF"
       android:textStyle="bold"
       android:text="Reps:    "
       android:layout_below="@+id/weight_lbl"/>

   <EditText android:id="@+id/reps"
       android:inputType="numberSigned"
       android:layout_height="wrap_content"
       android:layout_margin="4dp"
       android:layout_width="wrap_content"
       android:textColor="#FFFFFF"
       android:textStyle="bold"
       android:layout_toRightOf="@+id/reps_lbl"
       android:layout_below="@+id/weight_lbl"/>

    <ImageButton 
        android:id="@+id/confirm_btn"
        android:src="@drawable/ic_action_accept"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:tint="@android:color/white"
        android:layout_below="@+id/weight_lbl"
        />
     
 

</RelativeLayout><!-- From: file:/Users/Gav/AndroidStudioProjects/Gymify/gymify/src/main/res/layout/card_row.xml -->