<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/layout_exercise"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:columnCount="2"
		android:rowCount="4"
		android:padding="20dp"
		android:orientation="vertical"
		tools:context=".ExerciseActivity" >
    
	<TextView
	    android:id="@+id/ex_name_lbl"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_row="0"
		android:layout_column="0"
	    android:text="Name"
	    android:textSize="20dp" />

	<AutoCompleteTextView
	    android:id="@+id/ex_name_edit"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_row="0"
		android:layout_column="1"
	    android:hint="e.g. Bench Press"
		android:layout_weight="1"/>
	
	<TextView
	    android:id="@+id/ex_type_lbl"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_row="1"
		android:layout_column="0"
		android:textSize="20dp"/>

	<Spinner
	    android:id="@+id/type_spinner"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:background="@android:color/holo_blue_dark"
	    android:spinnerMode="dropdown"
		android:layout_row="1"
		android:layout_column="1" />
	
	<TextView
	    android:id="@+id/goal_lbl"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="16dp"
		android:layout_row="2"
		android:layout_column="0"/>
	
	<EditText
	    android:id="@+id/goal_edit"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:hint="3" 
	    android:textSize="20dp"
		android:paddingLeft="10dp"
	    android:inputType="numberSigned"
		android:layout_row="2"
		android:layout_column="1"/>

	<TextView
		android:id="@+id/desc_lbl"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Description"
		android:textSize="20dp"
		android:layout_row="3"
		android:layout_column="0"/>

	<EditText android:id="@+id/desc_edit"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:hint="Description... "
		android:layout_row="3"
		android:layout_column="1"/>

	    
</GridLayout>
