<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gav.gymify"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.gav.gymify.MainActivity"
            android:label="Gymify" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gav.gymify.ExerciseActivity"
            android:label="@string/title_activity_exercise"
            android:parentActivityName="com.gav.gymify.MainActivity" >
        </activity>
        <activity
            android:name="com.gav.gymify.SetActivity"
            android:label="@string/title_activity_set"
            android:parentActivityName="com.gav.gymify.ExerciseActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.gav.gymify.ExerciseListActivity"
            android:label="@string/title_exercise_list"
            android:parentActivityName="com.gav.gymify.MainActivity" >
        </activity>
        <activity
            android:name="com.gav.gymify.ExerciseDetailActivity"
            android:label="@string/title_exercise_detail"
            android:parentActivityName="com.gav.gymify.ExerciseListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gav.gymify.ExerciseListActivity" />
        </activity>
        <activity
            android:name="com.gav.gymify.ReportActivity"
            android:label="@string/title_activity_report" >
        </activity>
    </application>

</manifest>
